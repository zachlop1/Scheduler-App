<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center|top">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:gravity="center"
        android:background="#ff0">

        <ImageButton
            android:id="@+id/hamburger"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/menu"
            android:contentDescription="@string/appbar_scrolling_view_behavior"
            tools:ignore="TouchTargetSizeCheck"/>

        <EditText

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Search"
            android:textAllCaps="false"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <ImageButton
            android:id="@+id/settingsButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/setting"
            android:contentDescription="@string/appbar_scrolling_view_behavior"
            android:gravity="right"
            android:padding="5dp"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#EEEEEE"
        android:paddingTop="30dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#AAAAAA"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Groups"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:textColor="#000"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.button.MaterialButton
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:textColor="@color/black"
                    android:textAllCaps="false"
                    android:text="CprE\n309"
                    android:padding="0dp"
                    app:cornerRadius="50dp"
                    android:backgroundTint="#F88"
                    android:layout_marginRight="10dp"/>
                <com.google.android.material.button.MaterialButton
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:textColor="@color/black"
                    android:textAllCaps="false"
                    android:text="CprE\n381"
                    android:padding="0dp"
                    app:cornerRadius="50dp"
                    android:backgroundTint="#FF8"
                    android:layout_marginRight="10dp"/>
                <com.google.android.material.button.MaterialButton
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:textColor="@color/black"
                    android:textAllCaps="false"
                    android:text="CprE\n310"
                    android:padding="0dp"
                    app:cornerRadius="50dp"
                    android:backgroundTint="#05F"
                    android:layout_marginRight="10dp"/>
                <com.google.android.material.button.MaterialButton
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:textColor="@color/black"
                    android:textAllCaps="false"
                    android:text="CprE\n309"
                    android:padding="0dp"
                    app:cornerRadius="50dp"
                    android:backgroundTint="#88F"
                    android:layout_marginRight="10dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#AAAAAA"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Friends"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:textColor="#000"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.button.MaterialButton
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:textColor="@color/black"
                    android:textAllCaps="false"
                    android:text="Chase\nThompson"
                    android:padding="0dp"
                    app:cornerRadius="50dp"
                    android:backgroundTint="#F88"
                    android:layout_marginRight="10dp"/>
                <com.google.android.material.button.MaterialButton
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:textColor="@color/black"
                    android:textAllCaps="false"
                    android:text="Liam\nAnderson"
                    android:padding="0dp"
                    app:cornerRadius="50dp"
                    android:backgroundTint="#FF8"
                    android:layout_marginRight="10dp"/>
                <com.google.android.material.button.MaterialButton
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:textColor="@color/black"
                    android:textAllCaps="false"
                    android:text="Zach\nMiller"
                    android:padding="0dp"
                    app:cornerRadius="50dp"
                    android:backgroundTint="#05F"
                    android:layout_marginRight="10dp"/>
                <com.google.android.material.button.MaterialButton
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:textColor="@color/black"
                    android:textAllCaps="false"
                    android:text="Hor\nEdsh"
                    android:padding="0dp"
                    app:cornerRadius="50dp"
                    android:backgroundTint="#88F"
                    android:layout_marginRight="10dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:gravity="bottom">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/createGroupButton"
                android:layout_width="0dp"
                android:layout_height="132dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:backgroundTint="#F00"
                android:padding="0dp"
                android:text="Create Group"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:cornerRadius="20dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/addFriendButton"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:backgroundTint="#F00"
                android:padding="0dp"
                android:text="Add Friend"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:cornerRadius="20dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/createConflictButton"
                android:layout_width="0dp"
                android:layout_height="129dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:backgroundTint="#F00"
                android:padding="0dp"
                android:text="Create Conflict"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:cornerRadius="20dp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>